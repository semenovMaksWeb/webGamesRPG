{
    "compilerOptions": {
        "paths": {
            "@src/*": [
                "./src/*"
            ]
        },
        "target": "es2021",
        "module": "ES6",
        "lib": [
            "es6",
            "ES2021"
        ],
        "moduleResolution": "bundler",
        "allowJs": true,
        "outDir": "dist",
        "resolveJsonModule": true,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
    },
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    }
}